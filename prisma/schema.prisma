generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String @map(name: "FirstName") @db.VarChar(20)
  lastName  String @map(name: "LastName") @db.VarChar(20)
  email     String @unique @map(name: "Email") @db.VarChar(40)
  password  String @map(name: "Password") @db.VarChar(25)
  username  String @map(name: "Username") @db.VarChar(30)
}
